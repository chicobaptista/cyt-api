{
  "name": "cortex-yearly-themes-api",
  "version": "0.0.1",
  "description": "A rest api for my take on the Cortex Yearly Themes.",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky install",
    "test:unit": "nyc --reporter=text mocha -r ts-node/register  -r tsconfig-paths/register  --recursive './src/**/*.spec.ts'",
    "test:e2e": "mocha --require ts-node/register  -r tsconfig-paths/register --recursive 'test/e2e/*.spec.ts' --exit",
    "docker:start": "docker compose start",
    "cz": "git-cz",
    "serve": "LOG_ERRORS=true ts-node -r tsconfig-paths/register src/index.ts"
  },
  "author": "Francisco Llamosas Baptista",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "env-var": "^7.1.1",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "mongoose": "^6.4.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
